            name="Local Karaf Launch Controller"
            class="org.fusesource.ide.server.karaf.core.server.subsystems.Karaf2xLaunchController">
         </subsystem>
         <subsystemMapping
            id="launch.karaf.local.default"
            mappedId="launch.karaf.local"
